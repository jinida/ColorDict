<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:e="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:views="clr-namespace:ColorDict.Picker.UI.Views"
    xmlns:behaviors="clr-namespace:ColorDict.Core.Behavior;assembly=ColorDict.Core">

    <Style TargetType="{x:Type views:PickerWindow}">
        <Setter Property="Title" Value="PickerWindow"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="SizeToContent" Value="Width"/>
        <!--<Setter Property="Opacity" Value="0.01"/>-->
        <Setter Property="ShowInTaskbar" Value="False"/>
        <Setter Property="ResizeMode" Value="NoResize"/>
        <Setter Property="Topmost" Value="True"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:PickerWindow}">
                    <views:PickerContent/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
