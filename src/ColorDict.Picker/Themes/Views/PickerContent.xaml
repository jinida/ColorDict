<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:ColorDict.Picker.UI.Views">

    <Style TargetType="{x:Type views:PickerContent}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:PickerContent}">
                    <Border Margin="10 0 0 0" 
                            Width="35"
                            Background="{Binding DisplayedColorBrush}" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            x:Name="ColorBorder"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
